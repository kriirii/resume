<main class="p-3">
    <div class="p-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                {{#each breadcrumb}}
                {{#if url}}
                <li class="breadcrumb-item">
                    <a href="{{url}}">{{name}}</a>
                </li>
                {{else}}
                <li class="breadcrumb-item disabled" aria-current="page">
                    {{name}}</li>
                {{/if}}
                {{/each}}
            </ol>
        </nav>
    </div>
    <div class="p-3">
        <img src="{{newsData.photo}}" class="img-fluid w-100" alt="Cute cat">
        <div class="col-12"></div>
        <div class="p-3">
            <div class="row">
                <div class="col-12">
                    <h2>{{newsData.head.heading}}</h2>
                    <p>{{newsData.head.description}}</p>

                    {{#each newsData.body}}
                    <li class="list-group-item">
                        <h4>{{this.title}}</h4>
                        <p>{{this.text}}</p>
                    </li>
                    {{/each}}

                </div>
            </div>
        </div>
    </div>
    <hr>
    <div class="pt-5 pb-2">
        <h2 class="text-center">{{newsOtherBlock.title}}</h2>
    </div>

    <div class="row g-4">
        {{#each newsOtherBlock.cards}}
        <div class="col-3 row-4">
            <div class="card text-bg-dark">
                <div class="card-header">{{title}}
                    {{#if isTop}}
                    <button class="btn btn-danger rounded-pill mx-5 my-3 ms-0">Top</button>
                    {{/if}}
                    {{#if isNew}}
                    <button class="btn btn-success rounded-pill mx-2 my-3 ms-0">New</button>
                    {{/if}}
                </div>
                <div class="card-body">
                    <h5 class="card-title"></h5>
                    <p>{{description}}</p>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</main>