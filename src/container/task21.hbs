<main>
    <div class="card">
        <div class="card-body">

            <div class="card">
                <div class="card-body"> {{!якщо не буде цього рядка контент прижимається до краю }}
                    <div class="main-heading">
                        <h1>{{heading.main.title}}</h1>
                        <p>{{heading.main.text}}</p>
                    </div>
                    <button class="btn btn-primary">{{heading.main.button_text.solid}}
                    </button>{{!звичайна кнопка синя головна}}
                    <br>
                    <br>
                    <button class="btn btn-outline-primary">{{heading.main.button_text.outline}}</button>
                    {{! другорядна але основна. прозора кнопка синя рамка і текст ( при наведенні зафарб.)}}
                </div>
            </div>
            <br>

            <div class="card">
                <div class="card-body"> {{!якщо не буде цього рядка контент прижимається до краю }}
                    <div class="second-heading">
                        <h2>{{heading.second.title}}</h2>
                        <p>{{heading.second.text}}</p>
                        <button class="btn btn-secondary">{{heading.main.button_text.solid}}
                        </button>
                        <br>
                        <br>
                        <button class="btn btn-outline-secondary">{{heading.second.button_text.outline}}</button>
                    </div>
                </div>
            </div>
            <br>

            <div class="card">
                <div class="card-body"> {{!якщо не буде цього рядка контент прижимається до краю }}
                    <div class="subblock">
                        <h3>{{heading.subblock.title}}</h3>
                        <p>{{heading.subblock.text}}</p>

                        <button class="btn btn-dark">{{heading.subblock.button_text.solid}}
                        </button>
                        <br>
                        <br>
                        <button class="btn btn-outline-dark">{{heading.subblock.button_text.outline}}</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <br>

    <div class="card">
        <div class="card-body">
            <h1>{{nested_display.title}}</h1>
            <div class="card">
                <div class="card-body">
                    <div class="subblock">
                        <h4>{{nested_display.children_display.title}}</h4>
                        <p>{{nested_display.children_display.text}}</p>
                        <button class="btn btn-outline-warning">{{heading.subblock.button_text.solid}}</button>

                    </div>
                </div>
            </div>
            <br>
            <div class="nested-display">
                <h6>{{nested_display.header_text}}</h6>
                <button class="btn btn-info">
                    {{nested_display.button.text}}
                </button>
            </div>
        </div>
    </div>

    <br>
    <div class="card">
        <div class="card-body">
            <h6 class="text-uppercase">{{paragraph.title}}</h6>
            <br> {{paragraph.text}}
            <br>
            <br>
            <a href="{{paragraph.button.url}}">{{paragraph.button.text}}</a>
            <br>
            <br>

            <ul>
                {{#each paragraph.list_name}}
                <li><a href="{{this.url}}">{{this.text}}</a></li>
                {{/each}}
            </ul>
        </div>
    </div>
</main>