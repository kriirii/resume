<main class="p-1">

    <div class="p-3">
        {{!-- Хлібні крихти --}}
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                {{#each breadcrumb}}
                {{#if url}}
                <li class="breadcrumb-item">
                    <a href="{{url}}">{{name}}</a>
                </li>
                {{else}}
                <li class="breadcrumb-item disabled" aria-current="page">
                    {{name}}</li>
                {{/if}}
                {{/each}}
            </ol>
        </nav>
    </div>
    {{!-- назва --}}
    <div class="header p-3">
        <div class="col mt-3 mb-2">
            <h1 class="card-title">{{header}}</h1>
            <p class="card-text p-2">{{formBlock.rating.title}}: {{formBlock.rating.value}}</p>
        </div>
    </div>
    {{!-- 3 розкривні списка --}}

    <div class="d-flex align-items-center">
        {{#each sortBlock}}
        <div class="mx-2">
            <select class="form-select" aria-label="{{this.placeholder}}">
                <option selected>{{this.placeholder}}</option>
                {{#each this.options}}
                <option value="{{this.value}}">{{this.text}}</option>
                {{/each}}
            </select>
        </div>
        {{/each}}
    </div>

    {{!-- Ліва частина контенту 4 --}}

    <div class="row p-3">
        <div class="col-sm-4">
            <div class="row">
                <div class="card">
                    <div class="card-body">
                        {{!-- Вибираємо продавця --}}
                        <p>{{filterBlock.sellers.title}}</p>
                        {{#each filterBlock.sellers.list}}
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="{{this.value}}" id="{{this.value}}">
                            <label class="form-check-label" for="{{this.value}}">
                                {{this.value}}
                            </label>
                        </div>
                        {{/each}}

                        <hr>

                        {{!-- Обираємо бренд --}}

                        <div class="filter-block">
                            <p>{{filterBlock.brands.title}}</p>
                            <div class="filter-block_input-container">
                                <input type="text" placeholder="{{filterBlock.brands.input.placeholder}}"
                                    class="form-control filter-block__input">
                            </div>
                            {{#each filterBlock.brands.options}}
                            <ul>
                                <label class="filter-block__label">
                                    <input type="checkbox" value="{{this.value}}" class="filter-block__checkbox">
                                    {{this.value}}
                                </label>
                            </ul>
                            {{/each}}
                            <hr>
                        </div>

                        {{!-- Обираємо ціну від до --}}

                        <div class="filter-block">
                            <p class="filter-block__title">{{filterBlock.price.title}}</p>
                            <div class="filter-block__range-container">
                                <div class="input-group mb-3">
                                    <input type="text" placeholder="{{filterBlock.price.range.from}}"
                                        class="form-control filter-block__range-input">
                                </div>
                                <div class="input-group mb-3">
                                    <input type="text" placeholder="{{filterBlock.price.range.to}}"
                                        class="form-control filter-block__range-input">
                                </div>
                                <button class="btn btn-primary filter-block__button"
                                    href="{{filterBlock.price.button.link}}">
                                    {{filterBlock.price.button.text}}
                                </button>
                            </div>
                        </div>

                        {{!-- вибір категорій--}}

                        <div class="accordion filter-block">
                            {{#each filterBlock.filterList}}
                            <hr class="p-2">
                            </hr>
                            <p class="mb-4">{{this.title}} </p>
                            {{#each this.options}}
                            <li class="list-group-item filter-block__list-item">
                                <div class="form-check">
                                    <input type="checkbox" value="{{this.value}}"
                                        class="form-check-input filter-block__checkbox" id="{{this.value}}">
                                    <label class="form-check-label" for="{{this.value}}">{{this.value}}</label>
                                </div>
                            </li>
                            {{/each}}
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        </div>


        {{!-- Права частина контенту --}}

        <div class="col-sm-8">
            <div class="container">
                <div class="row">
                    {{#each goodsList}}
                    <div class="col-md-6">
                        <div class="card">
                            <img src="{{img}}" alt="{{name}}">
                            <div class="card-body p-3">
                                {{#if isHot}}
                                <button
                                    class="btn btn-warning btn-sm rounded-pill mx-3 my-3 ms-6 text-white">HOT</button>
                                {{/if}}
                                {{#if isNew}}
                                <button class="btn btn-primary btn-sm rounded-pill mx-3 my-3 ms-9">New</button>
                                {{/if}}
                                <p>{{#if isFast}}
                                    <button class="btn btn-success mb-1">Швидка
                                        доставка</button>
                                    {{/if}}
                                    {{#if isFree}}
                                    <button class="btn btn-secondary">Безкоштовна
                                        доставка</button>
                                    {{/if}}
                                </p>
                                <h5 class="p-3">{{name}}</h5>
                                <ul>
                                    <p>{{review.amount}} {{review.text}}</p>
                                    <p><b>{{price}}</b></p>
                                    <p>{{delivery}}</p>
                                    <div class="d-grid gap-2 justify-content-md-start">
                                        {{#each buttons}}
                                        <a href="{{link}}"
                                            class="btn d-block {{#if this.isPrimary}}btn-primary{{/if}}{{#if this.isSecondary}}btn-secondary{{/if}}">{{this.text}}</a>
                                        {{/each}}
                                    </div>
                                    {{#each characteristics}}
                                    <li>{{title}}: {{value}}</li>
                                    {{/each}}
                                </ul>
                            </div>
                        </div>
                        <br>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>