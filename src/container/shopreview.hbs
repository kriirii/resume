<main class="p-1">
    <div class="header p-3">
        <div class="col mt-3 mb-2">
            <h1 class="card-title">{{formBlock.header}}</h1>
            <p class="card-text p-2">{{formBlock.rating.title}}: {{formBlock.rating.value}}</p>
        </div>
    </div>

    {{!-- Ліва частина контенту 8 --}}
    <div class="row">
        <div class="col-sm-8">
            <div class="row">
                <div class="col-sm-12 p-3">
                    <ul class="nav nav-tabs justify-content" role="tablist">
                        {{#each formBlock.actionBlock.tabs}}
                        <li class="nav-item">
                            <a class="nav-link {{#if isActive}}active{{/if}}" data-toggle="tab" href="#{{text}}"
                                role="tab">{{text}}</a>
                        </li>
                        {{/each}}
                    </ul>
                </div>
                <div class="p-3">
                    <div class="card my-4">
                        <div class="card-body">
                            <div class="tab-pane fade show active" id="Відгуки" role="tabpanel">
                                <h6>{{formBlock.actionBlock.report.title}}</h6>
                                <a href="{{formBlock.actionBlock.report.button.link}}"
                                    class="btn btn-secondary">{{formBlock.actionBlock.report.button.text}}</a>
                            </div>
                        </div>
                    </div>
                    <hr>
                </div>
                <div class="p-3">
                    <h2 class="card-title">{{formBlock.feedbackBlock.title}}</h2>

                    <div class="d-grid gap-2 d-md-flex justify-content-md mt-3">
                        {{#each formBlock.feedbackBlock.buttons}}
                        <a href="{{this.link}}"
                            class="btn {{#if this.isWarning}}btn-warning{{/if}}{{#if this.isSuccess}}btn-success{{/if}}{{#if this.isDanger}}btn-danger{{/if}} text-white">{{this.text}}</a>
                        {{/each}}
                    </div>
                    <hr>
                </div>
            </div>
        </div>



        {{!-- Права частина контенту 8 --}}

        <div class="col-sm-4">
            <div class="card my-4">
                <div class="card-body">
                    <div class="col">
                        <img src="{{formBlock.goodsInfo.photo}}" class="img-fluid">
                    </div>
                    <div class="mt-3">
                        <h4>{{formBlock.goodsInfo.name}}</h4>
                    </div>
                </div>
            </div>
            <div class="card my-4">
                <div class="card-body">
                    <p class="my-3">{{formBlock.goodsInfo.price}}</p>
                    {{#if formBlock.goodsInfo.inMarket}}
                    <p>Є в наявності</p>
                    {{/if}}

                    <div class="d-grid gap-2 justify-content-md-start">
                        {{#each formBlock.goodsInfo.buttons}}
                        <a href="{{this.link}}"
                            class="btn d-block {{#if this.isPrimary}}btn-primary{{/if}}{{#if this.isSecondary}}btn-secondary{{/if}}">{{this.text}}</a>
                        {{/each}}
                    </div>

                </div>
            </div>
            <div class="card my-3">
                <div class="card-body">
                    <div class="d-flex flex-column">
                        <p class="fw-bold">{{formBlock.goodsInfo.seller.title}}:</p>
                        <p>{{formBlock.goodsInfo.seller.value}}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{!-- Далі буде основний контент сторінки --}}

    <div class="card my-4">
        <div class="card-body">
            {{#each reviewList}}
            <div class="review">
                <div class="card">
                    <div class="p-2">
                        <div class="display-8"><b>{{title.userName}}</b></div>
                        <p>{{title.caption}}</p>
                        <p>{{title.date}}</p>
                    </div>
                </div>
                <div class="card">
                    <div class="card-body p-3">
                        <p>{{reviewBody.seller.title}}: {{reviewBody.seller.value}}</p>
                        <p>{{reviewBody.rating.title}}: {{reviewBody.rating.value}}</p>
                        {{#if reviewBody.text}}
                        {{#each reviewBody.text}}
                        <p>{{this}}</p>
                        {{/each}}
                        {{/if}}
                        {{#if reviewBody.advantages}}
                        <p><b>{{reviewBody.advantages.title}}</b></p>
                        <p>{{reviewBody.advantages.text}}</p>
                        {{/if}}
                        {{#if reviewBody.disadvantages}}
                        <p><b>{{reviewBody.disadvantages.title}}</b></p>
                        <p>{{reviewBody.disadvantages.text}}</p>
                        {{/if}}

                        {{#if reviewBody.images}}
                        <div class="images">
                            {{#each reviewBody.images}}
                            <img src="{{this}}" alt="Review image">
                            {{/each}}
                        </div>
                        {{/if}}
                    </div>
                </div>
                {{!-- тут доп відгуки --}}
                <div class="comments">
                    {{#each reviewBody.coments}}
                    <div class="card col-10 my-4 mx-auto">
                        <div class="card-body">
                            <div class="comment">
                                <div class="display-8"><b>{{this.userName}}</b></div>
                                <p class="date">{{this.date}}</p>
                                <p>{{this.text}}</p>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</main>